<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhadrianwaletv">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dhadrianwaletv.Activities.MainActivity"
            android:banner="@mipmap/ic_launcher"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dhadrianwaletv.Activities.AudioActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhadrianwaletv.Activities.MainActivity" />
        </activity>
        <activity android:name="com.dhadrianwaletv.Activities.GalleryActivity" />
        <activity android:name="com.dhadrianwaletv.Activities.AlbumActivity" />
        <activity android:name="com.dhadrianwaletv.Activities.ImageViewActivity" />
        <activity android:name="com.dhadrianwaletv.Activities.ContactUsActivity" />
        <activity android:name="com.dhadrianwaletv.Activities.VideoPlaylist" />
        <activity android:name="com.dhadrianwaletv.Activities.YoutubeHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhadrianwaletv.Activities.MainActivity" />
        </activity>
        <activity android:name="com.dhadrianwaletv.Activities.LiveVideo"
            android:hardwareAccelerated="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhadrianwaletv.Activities.MainActivity" />
        </activity>
        <activity android:name="com.dhadrianwaletv.Activities.AllVideos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhadrianwaletv.Activities.YoutubeHome" />
        </activity>
        <activity android:name="com.dhadrianwaletv.Activities.YoutubePlaylist">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhadrianwaletv.Activities.YoutubeHome" />
        </activity>
        <activity android:name="com.dhadrianwaletv.Activities.VideoPlay">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhadrianwaletv.Activities.YoutubeHome" />
        </activity>
    </application>

</manifest>