<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aa212565"

    tools:context=".Activities.YoutubeHome">


    <LinearLayout
        android:layout_margin="24dp"
        android:focusable="true"
        android:background="@drawable/bg_select"
        android:padding="16dp"
        android:id="@+id/ll_allVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_allvideos"
            android:textStyle="bold"
            android:textSize="48dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouTube Videos"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:focusable="true"
        android:background="@drawable/bg_select"
        android:padding="16dp"
        android:id="@+id/ll_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_playlist"
            android:textStyle="bold"
            android:textSize="48dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouYube Playlist"/>
    </LinearLayout>

</LinearLayout>
